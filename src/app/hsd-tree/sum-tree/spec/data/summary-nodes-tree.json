{
  "name": "summaryNodesTree",
  "source": "summaryNodes",
  "transform": [
    {
      "type": "lookup",
      "from": "singleNodesTree",
      "key": "internalNodeId",
      "fields": [
        "internalNodeId"
      ],
      "values": [
        "y",
        "visibility"
      ]
    },
    {
      "type": "formula",
      "expr": "datum.summaryNodeId[2] * width / peek(levelExtent)",
      "as": "x"
    },
    {
      "type": "extent",
      "field": "count",
      "signal": "countExtent"
    },
    {
      "type": "formula",
      "expr": "log(max(1, 100 * datum.count / peek(countExtent))) / log(100) * .75 + .25",
      "as": "multiplier"
    },
    {
      "type": "formula",
      "expr": "if(indata('clickedLeafs', 'internalNodeId', datum.internalNodeId), 0, 1)",
      "as": "opacity"
    }
  ]
}
