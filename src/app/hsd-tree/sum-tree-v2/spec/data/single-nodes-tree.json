{
  "name": "singleNodesTree",
  "source": "singleNodes",
  "transform": [
    {
      "type": "stratify",
      "key": "internalNodeId",
      "parentKey": "parentInternalNodeId"
    },
    {
      "type": "tree",
      "method": "cluster",
      "size": [
        {
          "signal": "height"
        },
        {
          "signal": "width"
        }
      ],
      "as": [
        "y", "ignored"
      ]
    },
    {
      "type": "formula",
      "expr": "datum.internalNodeId[1] * width / peek(levelExtent)",
      "as": "x"
    },
    {
      "type": "lookup",
      "from": "nodeLookup",
      "key": "internalNodeId",
      "values": [
        "type",
        "name",
        "visibility"
      ],
      "fields": [
        "internalNodeId"
      ],
      "default": "Leaf"
    }
  ]
}
