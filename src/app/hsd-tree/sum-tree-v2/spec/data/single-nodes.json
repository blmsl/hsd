{
  "name": "singleNodes",
  "source": "barBreakdown",
  "transform": [
    {
      "type": "aggregate",
      "groupby": [
        "internalNodeId"
      ]
    },
    {
      "type": "formula",
      "expr": "lastindexof(datum.internalNodeId[0], '\\\\')",
      "as": "splitIndex"
    },
    {
      "type": "formula",
      "expr": "slice(datum.internalNodeId[0], 0, datum.splitIndex)",
      "as": "parentPath"
    },
    {
      "type": "formula",
      "expr": "[datum.parentPath, datum.internalNodeId[1] - 1]",
      "as": "parentInternalNodeId"
    },
    {
      "type": "formula",
      "expr": "if(datum.parentPath == '', null, datum.parentInternalNodeId)",
      "as": "parentInternalNodeId"
    },
    {
      "type": "lookup",
      "from": "nodeLookup",
      "key": "internalNodeId",
      "values": [
        "type",
        "name",
        "visibility"
      ],
      "fields": [
        "internalNodeId"
      ],
      "default": "Leaf"
    },
    {
      "type": "filter",
      "expr": "!indata('collapsedNodes', 'id', datum.internalNodeId)"
    }
  ]
}
